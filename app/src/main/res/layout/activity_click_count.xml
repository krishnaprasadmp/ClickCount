<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/click_button"
        android:onClick="increment"/>

    <TextView
        android:text="@string/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:id="@+id/button_count"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"
        android:layout_below="@+id/click_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_count"
        android:layout_toEndOf="@+id/click_button"
        android:id="@+id/countValue"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"
        android:text="@string/clickCount"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:text="@string/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_count"
        android:layout_alignStart="@+id/button_count"
        android:layout_marginTop="4dp"
        android:id="@+id/background"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"/>

    <TextView
        android:text="@string/background_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_alignStart="@+id/countValue"
        android:layout_marginStart="12dp"
        android:id="@+id/backCountValue"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"/>


</RelativeLayout>