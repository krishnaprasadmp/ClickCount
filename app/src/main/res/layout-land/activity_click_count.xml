<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/background"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_count" />

    <TextView
        android:text="@string/background_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_toEndOf="@+id/background"
        android:layout_marginStart="56dp"
        android:id="@+id/backCountValue"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp" />

    <TextView
        android:text="@string/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:id="@+id/button_count"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/background" />

    <TextView
        android:text="@string/clickCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_count"
        android:layout_alignStart="@+id/backCountValue"
        android:id="@+id/countValue"
        android:textColor="@android:color/background_dark"
        tools:textSize="26sp" />

    <Button
        android:text="@string/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:id="@+id/click_button"
        android:onClick="increment"/>
</RelativeLayout>




